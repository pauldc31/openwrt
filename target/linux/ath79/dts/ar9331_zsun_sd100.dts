/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

#include "ar9331.dtsi"

/ {
	compatible = "zsun,SD100", "qca,ar9331";
	model = "Zsun WiFi SD Card reader";

	aliases {
		serial0 = &uart;
		led-boot = &system;
		led-failsafe = &system;
		led-running = &system;
		led-upgrade = &system;
	};


	gpio-leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&switch_led_pins>;

		system: system {
			label = "zsun,SD100:system";
			gpios = <&gpio 0 GPIO_ACTIVE_HIGH>;
		};

	};

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		poll-interval = <20>;

		reset {
			label = "zsun,SD100:reset";
			linux,input-type = <EV_KEY>;
			linux,code = <BTN_1>;
			gpios = <&gpio 22 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};
	};

	gpio_export {
	compatible = "gpio-export";
	#size-cells = <0>;

		usb_switch {
			gpio-export,name = "zsun,SD100:usb_switch";
			gpio-export,output = <1>;
			gpios = <&gpio 21 GPIO_ACTIVE_LOW>;
		};

		sd_reset {
			gpio-export,name = "zsun,SD100:sd_reset";
			gpio-export,output = <1>;
			gpio-export,direction_may_change = <1>;
			gpios = <&gpio 18 GPIO_ACTIVE_HIGH>;
		};

	};

};

&spi {
	status = "okay";
	num-cs = <1>;

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>; // Check
		spi-max-frequency = <25000000>; // Check

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			u_boot: partition@0 {
				reg = <0x0 0x10000>;
				label = "u-boot";
				read-only;
			};

			u_boot_env: partition@10000 {
				reg = <0x10000 0x10000>;
				label = "u-boot-env";
				read-only;
			};

			firmware: partition@20000 {
				reg = <0x20000 0xFC0000>;
				label = "firmware";
			};

			nvram: partition@fe0000 {
				reg = <0xFE0000 0x10000>;
				label = "nvram";
				read-only;
			};

			art: partition@ff0000 {
				reg = <0xFF0000 0x10000>;
				label = "art";
				read-only;
			};
		};
	};
};


&eth1 {
	status = "okay";
	mtd-mac-address = <&art 0x0006>;
};

&gpio {
	status = "okay";
};

&mdio0 {
	status = "okay";

	phy4: ethernet-phy@4 {
		reg = <4>;
	};
};

&usb_phy { //or &_usb, check
	status = "okay";
};

&wmac {
	status = "okay";
	mtd-cal-data = <&art 0x1000>;
	mtd-mac-address = <&art 0x1002>;
};

&uart {
	status = "okay";
};
